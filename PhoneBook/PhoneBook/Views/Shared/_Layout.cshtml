@using System.Security.Claims

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhoneBook</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
@*         <link rel="stylesheet" href="~/lib/kendo/css/kendo.common.min.css" />
        <link rel="stylesheet" href="~/lib/kendo/css/kendo.default.min.css" /> *@
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>

    <link href="https://kendo.cdn.telerik.com/themes/8.2.1/default/default-turquoise.css" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://unpkg.com/jszip/dist/jszip.min.js"></script>
    <script src="https://cdn.kendostatic.com/2024.4.1112/js/kendo.all.min.js"></script>
    <script src="https://cdn.kendostatic.com/2024.4.1112/js/kendo.aspnetmvc.min.js"></script>
    <!-- Kendo Localization Files -->
    <script src="https://kendo.cdn.telerik.com/2025.3.1021/js/cultures/kendo.culture.vi-VN.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2025.3.1021/js/cultures/kendo.culture.en-US.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2025.3.1021/js/messages/kendo.messages.vi-VN.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2025.3.1021/js/messages/kendo.messages.en-US.min.js"></script>

    <style>
        .navbar-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 0.3rem 1rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        }

        .navbar-brand {
            display: flex;
            align-items: flex-end;
            gap: 20px;
            padding-top: 4px;
        }
        .navbar-logo {
            height: 40px;
            width: auto;
            max-width: 150px;
            transform: scale(1.25);
            transform-origin: left center;
        }
        .navbar-brand-text {
            color: white;
            font-weight: 700;
            font-size: 20px;
            margin-bottom: 2px;
        }

        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%23fff' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255,255,255,0.8)' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
        .navbar-logo {
            height: 40px; 
            width: auto;
            max-width: 150px;
            transform: scale(1.25); 
            transform-origin: left center;
        }
        .user-info {
            color: white;
            text-align: right;
        }

        .user-name {
            font-weight: 600;
            font-size: 15px;
        }

        .user-position {
            font-size: 12px;
            opacity: 0.9;
        }

        .btn-logout {
            background-color: rgba(255, 255, 255, 0.95);
            color: #764ba2;
            border: none;
            padding: 8px 20px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
        }

            .btn-logout:hover {
                background-color: #fff;
                color: #667eea;
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            }

        .lang-toggle {
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 8px;
            overflow: hidden;
        }

        .btn-lang {
            color: white;
            background: transparent;
            font-weight: 600;
            padding: 5px 14px;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-lang.active {
                background: rgba(255, 255, 255, 0.9);
                color: #764ba2;
            }
        @@media (max-width: 992px) {
            .user-info

        {
            text-align: left;
            margin-bottom: 10px;
        }

        .navbar-brand-text {
            font-size: 16px;
        }

        .btn-logout {
            font-size: 13px;
            padding: 6px 14px;
        }

        .btn-lang {
            padding: 4px 10px;
            font-size: 13px;
        }

        }

        @@media (max-width: 576px) {
            .user-position

        {
            display: none;
        }

        .navbar-logo {
            height: 35px;
        }

        .user-name {
            font-size: 13px;
        }

        }
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-custom navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/images/sagsLogo.png" alt="Company Logo" class="navbar-logo"
                         onerror="this.style.display='none'; document.getElementById('navbarTextFallback').style.display='flex';" />

                    <div id="navbarTextFallback" style="display: none; align-items: center; gap: 10px;">
                        <span class="navbar-brand-icon">📱</span>
                        <h1 class="navbar-brand-text">PhoneBook</h1>
                    </div>

                    <h1 class="navbar-brand-text">PHONEBOOK</h1>
                </a>
                @{
                    var fullName = User.FindFirst("FullName")?.Value;
                    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                }
                <div class="d-flex align-items-center ms-auto">
                    <div class="user-info me-2">
                        <div class="user-name">
                            @fullName - @userId
                    </div>
                        <div class="user-position">@User.FindFirst("PositionName")?.Value</div>
                    </div>

                    <div class="lang-toggle btn-group me-2">
                        <button id="btnLangVi" class="btn btn-lang">VI</button>
                        <button id="btnLangEn" class="btn btn-lang">EN</button>
                    </div>

                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline ms-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-logout">Đăng xuất</button>
                    </form>
                </div>
            </div>
        </nav>
    }

    @RenderBody()
    <script>
        function setLanguage(lang) {
            document.cookie = `.AspNetCore.Culture=c=${lang}|uic=${lang}; path=/;`;
            location.reload();
        }

        $(document).ready(function () {
            const culture = document.cookie.match(/\.AspNetCore\.Culture=c=([^|]+)/);
            const lang = culture ? culture[1] : "vi-VN";

            kendo.culture(lang);

            if (lang === "vi-VN") $("#btnLangVi").addClass("active");
            if (lang === "en-US") $("#btnLangEn").addClass("active");

            $("#btnLangVi").click(() => setLanguage("vi-VN"));
            $("#btnLangEn").click(() => setLanguage("en-US"));
        });
    </script>

    <environment names="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/jszip/jszip.min.js"></script>
        <script src="~/lib/kendo/js/kendo.all.min.js"></script>
        <script src="~/lib/kendo/js/kendo.aspnetmvc.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"
                asp-fallback-src="~/lib/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap/js/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
        <script src="~/lib/jszip/jszip.min.js"></script>
        <script src="~/lib/kendo/js/kendo.all.min.js"></script>
        <script src="~/lib/kendo/js/kendo.aspnetmvc.min.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>